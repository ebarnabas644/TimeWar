<Page x:Class="TimeWar.Main.View.GameWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimeWar.Main.View"
      xmlns:main="clr-namespace:TimeWar.Main"
      mc:Ignorable="d" 
      DataContext="{Binding GameViewModel, Source={StaticResource Locator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GameWindow">

    <Grid>
        <main:GameControl x:Name="cont"/>
        <Button Visibility="Collapsed" Click="Unsubscribe_Click" Command="{Binding MenuPageCommand}" Margin="5" Content="Back" Grid.Row="3" Panel.ZIndex="2" Style="{StaticResource MenuButton}"/>
    </Grid>

</Page>
